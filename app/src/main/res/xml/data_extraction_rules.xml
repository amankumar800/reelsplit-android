<?xml version="1.0" encoding="utf-8"?>
<!--
    Cloud backup rules for Android 12+ (API 31+).
    Excludes cache and temporary processing files from Google Auto Backup
    to avoid wasting the user's 25 GB Drive quota on large video files.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Back up Room database and SharedPreferences -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <!-- Exclude cache (downloaded/split videos) and temp files -->
        <exclude domain="cache" path="." />
        <exclude domain="external" path="." />
    </cloud-backup>
    <device-transfer>
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <exclude domain="cache" path="." />
        <exclude domain="external" path="." />
    </device-transfer>
</data-extraction-rules>
